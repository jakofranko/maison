{
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
        "Maison": true,
        "Chambre": true,
        "Glyph": true,
        "Tile": true,
        "ROT": true,
        "Repository": true,
        "TileRepository": true,
        "d3": true,
        "consoleLogGrid": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "no-debugger": "off",
        "no-unused-vars": "off"
    }
}
